rules_version = "2";
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Alapértelmezett szabály - olvasás engedélyezése mindenkinek
      allow read: if true;
      // Írási műveletek csak bejelentkezett felhasználóknak
      allow write: if request.auth != null;
    }
    
    // Alkatrész képek speciális szabályai
    match /part-images/{imageId} {
      // Bárki olvashatja a képeket
      allow read: if true;
      // Hitelesített felhasználók feltölthetnek, módosíthatnak
      allow write: if request.auth != null;
      // Csak adminok törölhetik a képeket - opcionális
      // allow delete: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
